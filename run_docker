
#/usr/bin/env bash

docker rm -f bs-test

docker run --name bs-test \
    -p 8000:80 \
    -it \
    -v /etc/letsencrypt/:/etc/letsencrypt/ \
    -e LOG_LEVEL="debug" \
    --network "brickserverfastapi_default" \
    -v $PWD:/app \
    -e ENABLE_SSL=true \
    -e CERTFILE="/etc/letsencrypt/live/bd-testbed.ucsd.edu/fullchain.pem" \
    -e KEYFILE="/etc/letsencrypt/live/bd-testbed.ucsd.edu/privkey.pem" \
    --entrypoint /app/docker/start-reload.sh \
    jbkoh/brickserver:0.1
